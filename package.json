{
    "name": "react-ts-webpack",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/Dloong/react-webpack.git",
    "author": "shilong.duan@gmail.com",
    "license": "MIT",
    "scripts": {
        "start": "cross-env-shell NODE_ENV=development ts-node --files -P ./scripts/tsconfig.json ./scripts/start.ts --open",
        "lint": "yarn run lint-eslint && yarn run lint-stylelint",
        "lint-eslint": "eslint -c .eslintrc.js --ext .ts,.tsx,.js {src,scripts}/**/*.{ts,tsx,js}",
        "lint-stylelint": "stylelint --config .stylelintrc.json src/**/*.scss --syntax scss"
    },
    "devDependencies": {
        "@babel/core": "^7.11.1",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@types/case-sensitive-paths-webpack-plugin": "^2.1.4",
        "@types/connect-history-api-fallback": "^1.3.3",
        "@types/cors": "^2.8.7",
        "@types/express": "^4.17.7",
        "@types/friendly-errors-webpack-plugin": "^0.1.2",
        "@types/http-proxy-middleware": "^0.19.3",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-router-dom": "^5.1.5",
        "@types/webpack": "^4.41.21",
        "@types/webpack-dev-middleware": "^3.7.1",
        "@types/webpack-hot-middleware": "^2.25.3",
        "@types/webpack-merge": "^4.1.5",
        "@types/webpackbar": "^4.0.0",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "babel-loader": "^8.1.0",
        "connect-history-api-fallback": "^1.6.0",
        "conventional-changelog-cli": "^2.0.34",
        "cors": "^2.8.5",
        "cross-env": "^7.0.2",
        "eslint": "^7.6.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.5",
        "eslint-plugin-react-hooks": "^4.0.8",
        "eslint-plugin-unicorn": "^21.0.0",
        "express": "^4.17.1",
        "fork-ts-checker-webpack-plugin": "^5.0.14",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "get-port": "^5.1.1",
        "html-webpack-plugin": "^4.3.0",
        "http-proxy-middleware": "^1.0.5",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "log-symbols": "^4.0.0",
        "open": "^7.1.0",
        "prettier": "^2.0.5",
        "stylelint": "^13.6.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.18.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-hot-middleware": "^2.25.0",
        "webpack-merge": "^5.1.1",
        "webpackbar": "^4.0.0",
        "yarg": "^1.0.8",
        "yargs": "^15.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -c .commitlintrc.js -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js}": [
            "eslint -c .eslintrc.js"
        ],
        "*.{css,less,scss}": [
            "stylelint --config .stylelintrc.json"
        ],
        "*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0"
    }
}
